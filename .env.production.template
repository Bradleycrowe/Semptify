# Semptify Production Environment Configuration
# Generated: November 23, 2025
# Copy to .env and fill in actual values before deploying

# Flask Core
FLASK_SECRET_KEY=CHANGE_ME_GENERATE_RANDOM_STRING_32_CHARS
FLASK_ENV=production
FLASK_DEBUG=0

# Server Configuration
PORT=5000
SEMPTIFY_PORT=5000
SEMPTIFY_HOST=0.0.0.0
SEMPTIFY_THREADS=4
SEMPTIFY_WORKERS=2

# Security
SECURITY_MODE=enforced
ADMIN_RATE_WINDOW=3600
ADMIN_RATE_MAX=10
SESSION_TIMEOUT=3600
REMEMBER_ME_TIMEOUT=2592000

# Request Limits
MAX_REQUEST_BODY_SIZE=52428800
MAX_UPLOAD_SIZE_MB=50
SHUTDOWN_TIMEOUT=30

# Logging
ACCESS_LOG_JSON=1
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Upload Configuration
ALLOWED_EXTENSIONS=pdf,jpg,jpeg,png,txt,doc,docx,zip
UPLOAD_DIR=uploads/vault

# Feature Flags
ENABLE_DOCUMENTS=1
ENABLE_VAULT=1
ENABLE_LEDGER=1
ENABLE_AI_ASSISTANT=1
ENABLE_ADMIN=1

# Application Info
APP_NAME=Semptify
APP_VERSION=1.0.0-mvp
SUPPORT_EMAIL=support@semptify.com
TOS_URL=https://semptify.com/terms
PRIVACY_URL=https://semptify.com/privacy

# Database (SQLite for MVP)
DATABASE_URL=sqlite:///users.db

# Cloudflare R2 (Optional - for document persistence)
# CF_ACCOUNT_ID=your_account_id
# CF_API_TOKEN=your_api_token
# R2_BUCKET_NAME=semptify-documents

# AI Provider (Optional - for Copilot features)
# AI_PROVIDER=openai
# OPENAI_API_KEY=sk-...
# Or use Ollama for local LLM:
# AI_PROVIDER=ollama
# OLLAMA_BASE_URL=http://localhost:11434

# Email Notifications (Post-MVP)
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASSWORD=your_sendgrid_api_key
# FROM_EMAIL=noreply@semptify.com

# Admin Tokens (Generate with create_admin_token.py)
# ADMIN_TOKEN=see_security/admin_tokens.json

# Render.com Specific
# These are auto-set by Render:
# RENDER=true
# RENDER_SERVICE_NAME=semptify
# RENDER_EXTERNAL_URL=https://semptify.onrender.com