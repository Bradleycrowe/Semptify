# Example environment variables for SemptifyGUI
# Copy to `.env` or set these in your Render/hosting provider's environment.

# Security
SECURITY_MODE=open
# FLASK_SECRET should be a secure random string in production
FLASK_SECRET=replace-me-with-secure-secret
# Legacy single-token bootstrap (optional)
ADMIN_TOKEN=

# Server
SEMPTIFY_PORT=8443
SEMPTIFY_HOST=0.0.0.0

# SSL (dev only)
DEV_SSL_CERT=security/dev-local.crt
DEV_SSL_KEY=security/dev-local.key

# GitHub (optional - for release/tagging)
GITHUB_TOKEN=

# AI provider for the /api/copilot endpoint
AI_PROVIDER=openai
OPENAI_API_KEY=
# or for Azure/AzOpenAI: AZURE_API_KEY, AZURE_ENDPOINT

# RON / BlueNotary
RON_WEBHOOK_SECRET=
BLUENOTARY_API_KEY=
BLUENOTARY_BASE_URL=

# Rate limiting
ADMIN_RATE_WINDOW=60
ADMIN_RATE_MAX=60
ADMIN_RATE_STATUS=429
ADMIN_RATE_RETRY_AFTER=60

# Logging
LOG_MAX_BYTES=1048576

# Testing helper
TESTING=0

# Optional data root override
SEMPTIFY_DATA_ROOT=
